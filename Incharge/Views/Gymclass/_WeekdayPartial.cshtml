@model List<Incharge.ViewModels.Calendar.WeekdayItem>;


<table class="table-borderless table">
    <tbody class="border-white">
        @foreach(var item in Model)
        {
            <tr>
                <td onclick="location.href = '@Url.Action("Details", "GymClass", new { id = item.Item.Id })'" class="padding-10px">
                    @if (item.Item.Status == "Cancelled")
                    {
                        <span class="bg-danger padding-5px-tb padding-15px-lr border-radius-5 margin-10px-bottom text-white font-size16 xs-font-size13">
                            @item.Item.Name
                        </span>

                    }
                    @if (item.Item.Status == "Active")
                    {
                        <span class="bg-sky padding-5px-tb padding-15px-lr border-radius-5 margin-10px-bottom text-white font-size16 xs-font-size13">
                            @item.Item.Name
                        </span>

                    }
                    @if (item.Item.Status == "Completed")
                    {
                        <span class="bg-success padding-5px-tb padding-15px-lr border-radius-5 margin-10px-bottom text-white font-size16 xs-font-size13">
                            @item.Item.Name
                        </span>
                    }
                    <div class="margin-10px-top font-size14">@item.Item.Date.TimeOfDay.ToString(@"hh\:mm") - @item.Item.EndTime.TimeOfDay.ToString(@"hh\:mm")</div>
                    <div class="font-size13">@item.Item.Employee.FirstName @item.Item.Employee.LastName</div>
                    <div class="font-size13">@item.Item.Location.Name</div>
                </td>
            </tr>
       
            @foreach(var timeSlot in item.TimeSlots)
            {
                <tr>
                    <td onclick="location.href = '@Url.Action("Details", "GymClass", new { id = item.Item.Id })'" class="p-2">
                        <div class=""></div>
                    </td>
                </tr>
            }
        }
        </tbody>
</table>