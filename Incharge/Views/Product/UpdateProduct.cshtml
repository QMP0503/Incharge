@model Incharge.ViewModels.ProductVM
 
@{
    ViewData["Title"] = "UpdateProduct";
}

@*MAKE ENTIRE PROJECT MODAL FOR CLEANER LOOK!!!!!!!!!!!!!!!!!!!!*@ 


<div class="container">
    <div class="row">
        <h1 class="font-monospace fw-bold mt-3">Edit Product</h1>
    </div>
    <div class="form-group">
        <form asp-action="UpdateProduct" method="post">
            <div class="mb-3 mt-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                @*Will override price set in product type. Ok to be null*@
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ProductType" class="control-label"></label>
                <select asp-for="ProductTypeId" class="form-select">
                    @foreach (var product in Model.ProductTypeOption)
                    {
                        <option value="@product.Id">@product.Name</option>
                    }
                </select>
            </div>
            <a asp-action="Index" type="submit" class="btn btn-primary">Cancel</a>
            <button asp-action="UpdateProduct" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>