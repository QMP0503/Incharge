@model Incharge.ViewModels.LocationVM;

@{
    ViewData["Title"] = "Add Location";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Add New Location</h1>
        </div>

        <div class="card-body">
             <partial name="_formErrorMessage" model="@Model" /> 

            <form asp-action="AddLocation" method="post" enctype="multipart/form-data">
                <!--Location Form fields partial view-->
                <partial name="_ValidationScriptsPartial" />
                <partial name="_LocationFormFields" model="@Model" />
            </form>

        </div>

    </div>
</div>
