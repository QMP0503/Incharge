@using Incharge.Models;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> SignInManager;
@using BootstrapIcons;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Incharge</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Incharge.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" asp-append-version="true">
    <script src="https://kit.fontawesome.com/eaa21ac38a.js" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2" asp-append-version="true"></script>


    <script src="~/js/site.js" asp-append-version="true"></script>

    <link rel="stylesheet" href="~/css/MultiSelect.css" asp-append-version="true" />


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>



</head>
<body>
    <div class="wrapper">
        <div id="sidebar">
            <div class="fixed-start">
                <div class="bg-dark d-flex flex-column align-items-start px-3 pt-2 text-white min-vh-100">
                    <a href="/Home" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-primary text-decoration-none fw-bold">
                        <span class="fs-5 d-none d-sm-inline navbar-brand mt-4"><i class="fa-solid fa-dumbbell"></i>  Incharge </span>
                    </a>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <li class="nav-item nav">
                                <a href="/Home " class="nav-link px-0 align-middle text-white">
                                    <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                                </a>
                            </li>
                            <li>
                                <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-light">
                                    <i class="fs-4 bi-people-fill list-group-item-primary"></i> <span class="ms-1 d-none d-sm-inline">People</span>
                                </a>
                                <ul class="nav flex-column ms-1 collapse" id="submenu1" data-bs-parent="#menu">
                                    <li class="w-100">
                                        <a href="/Client" class="nav-link px-0 text-white">Clients</a>
                                    </li>
                                    <li>
                                        <a href="/Employee" class="nav-link px-0 text-white">Employee </a>
                                    </li>
                                </ul>
                            </li>

                            <li>
                                <a href="#gymMenu" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-light">
                                    <i class="fs-4 bi-calendar3"></i> <span class="ms-1 d-none d-sm-inline">Gym Schedule</span>
                                </a>
                                <ul class="nav flex-column ms-1 collapse" id="gymMenu" data-bs-parent="#menu">

                                    @*SPLIT MEMEBERSHIP AND DISCOUNTS CONTROLLER TO HAVE TWO SEPERATE SET FROM PRODUCTS*@
                                    <li class="w-100">
                                        <a href="/GymClass/LocationSchedule" class="nav-link px-0 text-light">Location</a>
                                    </li>
                                    <li>
                                        <a href="/GymClass/TrainerSchedule" class="nav-link px-0 text-light">Trainer</a>
                                    </li>
                                    <li>
                                        <a href="/GymClass" class="nav-link px-0 text-light">Class List</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-light">
                                    <i class="fs-4 bi-bag-fill"></i> <span class="ms-1 d-none d-sm-inline">Products</span>
                                </a>
                                <ul class="nav flex-column ms-1 collapse" id="submenu2" data-bs-parent="#menu">
                                    <li class="w-100">
                                        <a href="/Product" class="nav-link px-0 text-light">Gym Products</a>
                                    </li>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a href="/Discount" class="nav-link px-0 text-light"> Discounts</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                            <li>
                                <a href="#submenu3" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-light">
                                    <i class="fs-4 bi-bicycle"></i> <span class="ms-1 d-none d-sm-inline">Gym Activity</span>
                                </a>
                                <ul class="nav flex-column ms-1 text-light collapse" id="submenu3" data-bs-parent="#menu">
                                    <li class="w-100">
                                        <a href="/Equipment" class="nav-link px-0 text-light">Equipment</a>
                                    </li>
                                    <li>
                                        <a href="/Location" class="nav-link px-0 text-light">Location</a>
                                    </li>
                                </ul>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="#submenu4" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-light">
                                    <i class="fs-4 bi bi-graph-up-arrow"></i> <span class="ms-1 d-none d-sm-inline ">Analytics</span>
                                </a>
                                <ul class="nav flex-column ms-1 text-light collapse" id="submenu4" data-bs-parent="#menu">
                                    <li class="w-100">
                                        <a href="/Expense" class="nav-link px-0 text-light">Expenses</a>
                                    </li>
                                    <li>
                                        <a href="/Sale" class="nav-link px-0 text-light">Sales</a>
                                    </li>
                                    <li>
                                        <a href="/Analytics" class="nav-link px-0 text-light">Business Insight</a>
                                    </li>
                                   @*  <li>
                                        <a href="/Analytics/ReportList" class="nav-link px-0 text-light">Report List</a>
                                    </li> *@
                                </ul>
                            }
                        </ul>
                        <hr>
                    }
                    @*Design user image database and where they can edit their personal information*@
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="dropdown pb-4">
                            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> <span class="ms-1 d-none d-sm-inline">
                                    @User.Identity.Name</span">
                                    <span a class="d-none d-sm-inline mx-1"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                               @*  <li><a class="dropdown-item" href="#">New project...</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><a class="dropdown-item" href="#">Profile</a></li> @*Make profile page for this thing...
                                <li>
                                    <hr class="dropdown-divider">
                                </li> *@
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a href="~/account/register" class="dropdown-item">Register New Account</a></li>
                                }
                                <li><a href="/account/logout" class="dropdown-item">Sign out</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="dropdown pb-4">
                            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> <span class="ms-1 d-none d-sm-inline">
                                    Sign In</span">
                                    <span a class="d-none d-sm-inline mx-1"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                                <li><a asp-controller="Account" asp-action="Login" class="dropdown-item">Sign In</a></li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>


        @* RENDER BODY WHERE CODE OF PAGE IS COMPILED *@
        <div id="content" class="w-100">
            <div class="ms-md-auto w-100">
                <main role="main" class="px-md-3">
                    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                        </symbol>
                    </svg>
                    <div class="ms-1 mb-5">
                        @RenderBody()
                    </div>
                </main>
            </div>
        </div>

    </div>
    <!--Must be at the bottom of the document. CANNOT BE IN THE HEAD-->
    <script src="~/js/MultiSelect.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
