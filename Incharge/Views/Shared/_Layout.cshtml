@using Incharge.Models;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> SignInManager;
@using BootstrapIcons;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Incharge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Incharge.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />

</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-md-3 col-xl-2 px-sm-2 px-0 bg-dark col-auto"> @*start of sidebar*@
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none fw-bold">
                        <span class="fs-5 d-none d-sm-inline navbar-brand">Incharge</span>
                    </a>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <li class="nav-item">
                                <a href="/Home/Index" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                                </a>
                            </li>
                            <li>
                                <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-people-fill"></i> <span class="ms-1 d-none d-sm-inline">People</span>
                                </a>
                                <ul class="nav flex-column ms-1 collapse" id="submenu1" data-bs-parent="#menu">
                                    <li class="w-100">
                                        <a href="/Client/Index" class="nav-link px-2 text-white">Clients</a>
                                    </li>
                                    <li>
                                        <a href="/Employee/Index" class="nav-link px-2 text-white">Employee </a>
                                    </li>
                                </ul>
                            </li>

                            <li>
                                <a href="/GymClass/Index" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-calendar3"></i> <span class="ms-1 d-none d-sm-inline">Gym Schedule</span>
                                </a>
                            </li>
                            <li>
                                <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-bag-fill"></i> <span class="ms-1 d-none d-sm-inline">Products</span>
                                </a>
                                <ul class="nav flex-column ms-1 collapse" id="submenu2" data-bs-parent="#menu">

                                    @*SPLIT MEMEBERSHIP AND DISCOUNTS CONTROLLER TO HAVE TWO SEPERATE SET FROM PRODUCTS*@
                                    <li class="w-100">
                                        <a href="/Product/Index" class="nav-link text-light">Membership</a>
                                    </li>
                                    <li>
                                        <a href="#" class="nav-link text-light"> Discounts</a>
                                    </li>
                                    <li> @*Option for gyms who want to sell more than just membership*@
                                        <a href="#" class="nav-link text-light">Other</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="#submenu3" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-bicycle"></i> <span class="ms-1 d-none d-sm-inline">Gym Activity</span>
                                </a>
                                <ul class="nav flex-column ms-1 text-light collapse" id="submenu3" data-bs-parent="#menu">
                                    <li class="w-100">
                                        <a href="/Equipment/Index" class="nav-link px-0 text-light">Equipment</a>
                                    </li>
                                    <li>
                                        <a href="/Location/Index" class="nav-link px-0 text-light">Location</a>
                                    </li>
                                </ul>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="#submenu4" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi bi-graph-up-arrow"></i> <span class="ms-1 d-none d-sm-inline">Analytics</span>
                                </a>
                                <ul class="nav flex-column ms-1 text-light collapse" id="submenu4" data-bs-parent="#menu">
                                    <li class="w-100">
                                        <a href="/Expense/Index" class="nav-link px-0 text-light">Expenses</a>
                                    </li>
                                    <li>
                                        <a href="/Sale/Index" class="nav-link px-0 text-light">Sales</a>
                                    </li>
                                    <li>
                                        <a href="/Analytics/Index" class="nav-link px-0 text-light">Business Insight</a>
                                    </li>
                                </ul>
                            }
                        </ul>
                        <hr>
                    }
                    @*Design user image database and where they can edit their personal information*@
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="dropdown pb-4">
                            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> <span class="ms-1 d-none d-sm-inline">@User.Identity.Name</span">
                                <span a class="d-none d-sm-inline mx-1"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                                <li><a class="dropdown-item" href="#">New project...</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><a class="dropdown-item" href="#">Profile</a></li> @*Make profile page for this thing...*@
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a href="~/account/register" class="dropdown-item">Register New Account</a></li>
                                }
                                <li><a href="/account/logout" class="dropdown-item">Sign out</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="dropdown pb-4">
                            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> <span class="ms-1 d-none d-sm-inline">Sign In</span">
                                <span a class="d-none d-sm-inline mx-1"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                                <li><a asp-controller="Account" asp-action="Login" class="dropdown-item">Sign In</a></li>
                            </ul>
                        </div>
                    }

                </div>
             
            </div>
            @* RENDER BODY WHERE CODE OF PAGE IS COMPILED *@
            <div class="col-md-9 ms-md-auto col-xl-10 px-md-4` col-auto">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

    </div>
    
   @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Incharge - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
