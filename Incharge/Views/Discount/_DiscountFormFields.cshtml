@model Incharge.ViewModels.DiscountVM;

<partial name="_formErrorMessage" model="Model" />


<div class="mb-3">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" required type="text" />
</div>
<div class="mb-3">
    <label asp-for="DiscountValue" class="control-label"></label>
    <input asp-for="DiscountValue" class="form-control" placeholder="Enter Decimal Range from 0 to 1" type="number" step="0.01" min="0" max="1" required/>
</div>
<a asp-controller="Discount" asp-action="Index" type="button" class="btn btn-primary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>